[ui]
username = Gary Bernhardt

[defaults]
#log = --graph --style compact
outgoing = --graph
incoming = --graph
diff = -p
qnew = -D
qrefresh = -D

[diff]
git=1

[extdiff]
cmd.vimdiff = mvim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager=LESS='FSRX' less
ignore=version, help, update, push, pull, merge, fetch, convert, clone, record, crecord, grep

[extensions]
churn=
hgk=
mq=
record=
graphlog=
color=
rebase=
transplant=
bookmarks=
record=
extdiff=
pager=

